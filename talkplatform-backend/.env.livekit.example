# LiveKit Configuration
# Copy to your main .env file

# LiveKit Server Settings
LIVEKIT_WS_URL=ws://localhost:7880
LIVEKIT_API_KEY=your-api-key-here
LIVEKIT_API_SECRET=your-api-secret-here

# LiveKit Redis (for scaling multiple instances)
LIVEKIT_REDIS_URL=redis://localhost:6379

# TURN Server Configuration (for NAT traversal)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password

# Recording/Egress Settings
LIVEKIT_EGRESS_URL=http://localhost:9090
RECORDING_STORAGE_BUCKET=your-s3-bucket
RECORDING_STORAGE_REGION=us-east-1

# AI/Transcription Services
OPENAI_API_KEY=your-openai-key
GOOGLE_SPEECH_TO_TEXT_KEY=your-google-stt-key